#for
    width 100%
    padding 28px 0 103px
    h3
        font-size: 37px;
        font-family: "Intro", sans-serif;
        color: rgb(60, 68, 87);
        line-height: 1.27;
        margin-bottom: 71px
        max-width 610px
        letter-spacing: -0.7px;
.for_container
    overflow hidden
.for_container_first
    margin-bottom: 51px
    .for_img
        float left
        margin-right: 130px
    .for_list
        margin-top: 6px
.for_list_container
    margin-bottom: 40px
    display: table
    height 75px
.for_list_img
    display: table-cell
    vertical-align: middle
    width: 75px
    background-image url(../img/for_icons.jpg)
    background-repeat no-repeat
.for_list_img_second
    background-position: -75px 0
.for_list_img_third
    background-position: -150px 0
.for_list_img_fourth
    background-position: -225px 0
.for_list_img_fifth
    background-position: -300px 0
.for_list_img_sixth
    background-position: -375px 0
.for_list_reason
    display: table-cell
    vertical-align: middle
    padding-left: 20px
.for_container_second
    .for_img
        float: right
        margin-left: 130px
        margin-right: 9px;
    .for_list
        margin-top: 21px