#main
	width 100%
	padding 97px 0 220px
	background-image url(../img/main_bg.png)
	background-repeat no-repeat
	background-position: center top
	background-size: cover
	overflow hidden
	.container
		position relative
.titles
	position relative
	z-index 9
.pre
	font-size: 16px;
	font-family: "Intro", sans-serif;
	color: rgb(60, 68, 87);
	line-height: 1.9;
	max-width 450px
h1
	font-size: 46px;
	font-family: "Intro", sans-serif;
	color: rgb(60, 68, 87);
	line-height: 1
	margin: 45px 0 7px
	span
		font-family: "MinionPro", serif;
h2
	color: rgb(60, 68, 87);
	line-height: 1.444;
	max-width 860px
	margin-bottom: 37px
	font-size: 18px;
	font-family: "RobotoRegular", sans-serif;
.like_btn
	border-radius: 12px;
	background-color: rgb(255, 255, 255);
	width: auto;
	height: 28px;
	line-height: 18px
	font-size: 16px;
	font-family: "Intro", sans-serif;
	color: rgb(216, 125, 187);
	padding 5px 10px
	text-align: center
	display: inline-block
	margin-left: 7px
.like_btn_first
	margin-left: -10px
	margin-right: 10px
.button
	background-image: linear-gradient( 90deg, rgb(237,110,160) 0%, rgb(236,140,105) 100%);
	box-shadow: 0px 18px 18.86px 4.14px rgba(0, 0, 0, 0.12);
	width: 354px;
	height: 64px;
	line-height: 64px
	text-align: center
	font-size: 16px;
	font-family: "Intro", sans-serif;
	color: rgb(255, 255, 255);
	border-radius: 50px
	margin-top: 61px
	transition: all .4s ease-in
	&:hover
		background-image: linear-gradient(270deg, rgb(237,110,160) 0%, rgb(236,140,105) 100%);
		box-shadow: 0px 0px 18.86px 23px rgba(0, 0, 0, 0.12);
